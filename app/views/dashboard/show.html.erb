<% byebug %>
<div class="container-fluid">
  <div class="row">
    <div class="col-2">
      <h1><%= current_user.name%></h1>
      <img src="<%= current_user.image_url %>" class="img-fluid">
      <br>
      <div class="panel-body">
      <h2>Profile</h2>
      <p>Name: <%= current_user.name %></p>
      <p>Nickname: <%= current_user.nickname %></p>
      <p>Email: <%= current_user.email %></p>
      <p>Starred repos: <%= User.starred_results(current_user).count %></p>
      <p>Followers: <%= User.user_results(current_user)[:followers] %></p>
      <p>Following: <%= User.user_results(current_user)[:following] %></p>
      </div>
      <br>

    <div class="panel-body table-responsive">
          <h2>Organizations</h2>
      <table class="table table-hover table-striped table-bordered">
        <thead>
        </thead>
        <tbody>
          <% User.orgs_results(current_user).each do |org| %>
            <tr>
              <td><%= org[:name] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>

  </div>
  <div class="col-5">
      <h2>Create Repo</h2>
      <form>
          <div class="form-group">
            <input type="reponame" class="form-control" id="reponame"  placeholder="Enter Repo Name">
          </div>
    </form>
    <br>

    <div class="panel-body table-responsive table-lg" >
    <h2>Repos</h2>
    <% count = 0 %>
      <table class="table table-hover table-striped table-bordered">
        <thead>
        </thead>
        <tbody>
          <% User.repos_results(current_user).each do |repo| %>
            <tr>
              <td><%= repo[:name] %>
            <td><a href="<%= repo[:owner][:url] %>">Link to Repo</a></td>
            </tr>
              <% count += 1 %>
              <% break unless count < 25 %>
            <% end %>
        </tbody>
      </table>
    </div>
    <br>

  </div>
  <div class="col-5">
    <div class="panel-body table-responsive">
    <h2>Recent Activity</h2>
      <table class="table table-hover table-striped table-bordered">
        <thead>
        </thead>
        <tbody>
          <% count = 0 %>
          <% User.events_results(current_user).each do |event| %>
            <tr>
              <td><img src="<%= event[:actor][:avatar_url] %>" class="img-thumbnail" style="width:40%"></td>
              <td><%= event[:actor][:display_login] %></td>
              <td><%= event[:repo][:name] %></td>
              <td><%= event[:type] %></td>
            </tr>
            <% count += 1 %>
            <% break unless count < 5 %>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>

    <div class="panel-body table-responsive">
      <table class="table table-hover table-striped table-bordered">
        <thead>
        </thead>
        <tbody>
          <h2>Recent Activity From Users I Follow</h2>
          <% count = 0 %>
          <% User.received_events_results(current_user).each do |event| %>
            <tr>
              <td><img src="<%= event[:actor][:avatar_url] %>" class="img-thumbnail" style="width:55%"></td>
              <td><%= event[:actor][:display_login] %></td>
              <td><%= event[:repo][:name] %></td>
              <td><%= event[:type] %></td>
            </tr>
            <% count += 1 %>
            <% break unless count < 5 %>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>

  </div>
</div>
</div>
